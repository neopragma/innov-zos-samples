CREATE TABLE LABSCHEMA.PLAYERS
(
    PLAYER_ID   INTEGER GENERATED ALWAYS AS IDENTITY
                   (START WITH 1, INCREMENT BY 1, NO CACHE, NO CYCLE),
    PLAYER_NAME VARCHAR(100),
    TEAM_ID     INTEGER NOT NULL,  -- Foreign key to TEAMS.TEAM_ID
    CONSTRAINT PK_PLAYERS PRIMARY KEY (PLAYER_ID),
    CONSTRAINT FK_PLAYERS_TEAMS FOREIGN KEY (TEAM_ID)
        REFERENCES TEAMS (TEAM_ID)
        ON DELETE RESTRICT
)
IN DBMATE1.TSMATExx;


